<% provide :title, @category.name %>
<ul class="breadcrumb">
  <li><%= link_to t(".current_menu"), admin_categories_path %></li>
  <li class="active"><%= t ".current_action" %></li>
</ul>
<div class="container-fluid">
  <div class="row">
    <h1>
      <%= @category.name %>
    </h1>
  </div>
  <hr/>
  <div class="panel panel-default panel-table">
    <div class="panel-heading">
      <div class="row">
        <div class="col col-xs-6">
          <h3 class="panel-title"><%= t ".words" %></h3>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th><em class="glyphicon glyphicon-cog"></em></th>
            <th><%= t ".name" %></th>
          </tr>
        </thead>
        <tbody class="words">
          <%= render @words %>
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <%= will_paginate @words %>
    </div>
  </div>
</div>
