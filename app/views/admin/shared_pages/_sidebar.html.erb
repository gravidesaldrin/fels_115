<div class="col-sm-3">
  <% if logged_in? %>
    <%= link_to "#" do %>
      <strong><i class="glyphicon glyphicon-list">
      </i> <%= t ".menu"%> </strong>
    <% end %>
    <hr>
    <ul class="nav nav-stacked">
      <ul class="nav nav-stacked collapse in" id="userMenu">
        <li class="active">
          <%= link_to admin_users_path do %>
            <i class="glyphicon glyphicon-user"></i>
            <%= t ".all_users" %>
          <% end %>
        </li>
        <li>
          <%= link_to admin_categories_path do %>
            <i class="glyphicon glyphicon-th"></i>
            <%= t ".categories" %>
          <% end %>
        </li>
      </ul>
    </ul>
    <hr>
  <% end %>
  <ul class="nav nav-stacked">
    <li> <%= link_to t(".home"), root_path, {title: "Home"} %> </li>
    <li> <%= link_to t(".about"), about_path %> </li>
    <li> <%= link_to t(".help"), help_path %> </li>
    <li> <%= link_to t(".contact"), contact_us_path %> </li>
  </ul>
  <hr>
</div>
