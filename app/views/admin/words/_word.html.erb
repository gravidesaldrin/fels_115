<tr>
  <td align="center">
    <%= link_to [:admin, word], method: :delete, data: {confirm:
      "#{t ".confirm"}" } do %>
      <em class="glyphicon glyphicon-trash"></em>
    <% end %>
    &nbsp;
    <%= link_to edit_admin_word_path word do %>
      <em class="glyphicon glyphicon-edit"></em>
    <% end %>
  </td>
  <td>
    <%= link_to admin_word_path word do %>
      <%= word.content %>
    <% end %>
  </td>
  <td>
    <%= link_to admin_category_path word.category do %>
      <%= word.category.name %>
    <% end %>
  </td>
</tr>
