<%= form_for @lesson, html: {multipart: true,
  class: "margin-bottom-40"} do |f| %>
  <div class = "edit_lesson">
    <% @questions.each do |question| %>
      <h2> <%= question.content %> </h2>
      <%= f.fields_for :results do |builder| %>
        <%= render "lessons/result_fields", f: builder, question: question %>
      <% end %>
      <hr/>
    <% end %>
  </div>
  <%= f.hidden_field :id , value: @lesson.id %>
  <%= f.submit t(".finish_lesson"), class: "btn btn-primary" %>
<% end %>
<br/>
<%= t ".total_item" %>: <%= @limit %>
