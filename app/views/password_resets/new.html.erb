<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-lg-8">
    <%= form_for :password_reset, url: password_resets_path,
      html: {class: "margin-bottom-40"} do |f| %>
      <div class = "form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <%= f.submit t(".save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
